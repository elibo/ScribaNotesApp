<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText android:id="@+id/note_title" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="@string/hint_note_title"
        android:singleLine="true" android:maxLength="50" />


    <EditText android:id="@+id/note_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="start"
        android:inputType="textMultiLine" android:longClickable="true"
        android:hint="@string/hint_note_content" />


</LinearLayout>